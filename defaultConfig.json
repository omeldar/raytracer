        "type": "gradient",
        "colors": [
            {
                "color": [0.5, 0.7, 1.0],
                "position": 0.0
            }
        ]
    },
    "renderingOptions": {
        "shadowQuality": "high",
        "reflectionQuality": "high"
    }
